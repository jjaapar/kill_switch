# Door Sensor Daemon Configuration
# Place this file at: /etc/door_sensor/config.ini

[gpio]
# GPIO pin number (BCM numbering) connected to the door sensor
sensor_pin = 24

# Whether to enable internal pull-up resistor
# true = door closed when pin reads LOW (sensor pulls to ground when triggered)
# false = door closed when pin reads HIGH (sensor pulls to VCC when triggered)
pull_up = true

[ssh]
# SSH host for sending alert commands
host = alertserver.example.com

# SSH port (default: 22)
port = 22

# Path to SSH private key file
key_path = ~/.ssh/door_sensor_key

# SSH connection timeout in seconds
timeout = 10

[commands]
# Command to run on remote host when door opens
door_open = /usr/local/bin/send_alert "Door OPEN"

# Command to run on remote host when door closes  
door_closed = /usr/local/bin/send_alert "Door CLOSED"

[monitoring]
# Delay between sensor checks in seconds (default: 0.5)
alert_delay = 0.5

# Debounce delay to prevent false triggers in seconds (default: 1.0)
debounce_delay = 1.0

[cloudwatch]
# Enable CloudWatch logging (true/false)
enabled = true

# CloudWatch log group name
log_group = door-sensor

# CloudWatch log stream name  
log_stream = venue-door-events

# AWS region for CloudWatch
region = us-west-2

# Unique device identifier for this door sensor
device_id = venue_door-001
